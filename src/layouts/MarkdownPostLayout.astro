---
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <article class="blog-post">
    <!-- Image with placeholder -->
    {frontmatter.image && frontmatter.image.url && (
      <div class="image-container">
        <img 
          src={frontmatter.image.url} 
          alt={frontmatter.image.alt} 
          width="600" 
          height="400" 
          loading="lazy"
          onerror="this.src='/placeholder-image.jpg'" 
        />
      </div>
    )}

    <!-- Title -->
    <h1 class="post-title">{frontmatter.title}</h1>

    <!-- Description -->
    <p class="post-description">{frontmatter.description}</p>

    <!-- Author and Date -->
    <div class="meta">
      <span class="author">{frontmatter.author}</span>
      <span class="dot">â€¢</span>
      <span class="date">{(frontmatter.pubDate instanceof Date ? frontmatter.pubDate : new Date(frontmatter.pubDate)).toLocaleDateString()}</span>
    </div>

    <!-- Post content -->
    <div class="content">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
.blog-post {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  max-width: 700px;
  margin: 0 auto;
  padding: 2rem 1rem;
  font-family: 'Helvetica Neue', Arial, sans-serif;
}

.image-container {
  width: 100%;
  max-width: 600px;
  margin-bottom: 1.5rem;
}

.image-container img {
  width: 100%;
  height: auto;
  border-radius: 1.25rem;
  background-color: #89CE00; /* placeholder background */
  object-fit: cover;
  box-shadow: 0 8px 20px rgba(0,0,0,0.08);
}

.post-title {
  font-size: 2rem;
  font-weight: 700;
  margin: 0.5rem 0;
  color: #89CE00;
}

.post-description {
  font-size: 1.1rem;
  color: #000000;
  margin-bottom: 1rem;
}

.meta {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.95rem;
  color: #89CE00;
  margin-bottom: 2rem;
  text-align: left;
}

.meta .dot {
  font-weight: bold;
  color: #89CE00;
}

.content {
  font-size: 1.05rem;
  line-height: 1.6;
  margin-bottom: 2rem;
  width: 100%;
  text-align: left;
}

.content p {
  text-align: justify;
}


.tags {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 0.5rem;
  margin-top: 1rem;
}

.tag {
  display: inline-block;
  padding: 0.4rem 0.8rem;
  font-size: 0.9rem;
  color: #89CE00;
  text-decoration: none;
  background-color: #f8fcfd;
  transition: all 0.2s ease;
}
</style>
